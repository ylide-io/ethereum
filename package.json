{
	"name": "@ylide/ethereum",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"version": "0.8.0",
	"description": "Ylide Protocol SDK implementation for EVM-based blockchains",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/ylide-io/ethereum.git"
	},
	"files": [
		"lib/**/*",
		"src/**/*"
	],
	"scripts": {
		"test": "mocha -r ts-node/register 'tests/**.ts'",
		"build": "rimraf ./lib && tsc --project build-tsconfig.json",
		"start": "ts-node ./src/index.ts",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "tslint -p tsconfig.json",
		"prepublishOnly": "npm test && npm run lint",
		"preversion": "npm run lint"
	},
	"keywords": [
		"blockchain",
		"ethereum",
		"messaging",
		"communication"
	],
	"author": "Danila Simonov",
	"license": "ISC",
	"dependencies": {
		"@ethersproject/abi": "5.7.0",
		"@ethersproject/abstract-provider": "5.7.0",
		"@ethersproject/providers": "5.7.2",
		"@ylide/ethereum-contracts": "link:../ethereum-contracts",
		"@ylide/sdk": "link:../sdk",
		"@ylide/smart-buffer": "0.0.9",
		"ethers": "5.7.2",
		"eventemitter3": "4.0.7",
		"semaphore-promise": "1.4.1"
	},
	"devDependencies": {
		"@ethersproject/bytes": "5.7.0",
		"@nomicfoundation/hardhat-chai-matchers": "1.0.5",
		"@nomicfoundation/hardhat-network-helpers": "1.0.7",
		"@nomicfoundation/hardhat-toolbox": "2.0.1",
		"@nomiclabs/hardhat-ethers": "2.2.2",
		"@nomiclabs/hardhat-etherscan": "3.1.5",
		"@typechain/ethers-v5": "10.2.0",
		"@typechain/hardhat": "6.1.5",
		"@types/chai": "4.3.4",
		"@types/mocha": "10.0.1",
		"@types/node": "18.11.18",
		"chai": "4.3.7",
		"hardhat": "2.12.6",
		"hardhat-gas-reporter": "1.0.9",
		"mocha": "10.2.0",
		"prettier": "2.7.1",
		"rimraf": "3.0.2",
		"solidity-coverage": "0.8.2",
		"ts-node": "10.8.2",
		"tslint": "6.1.3",
		"tslint-config-prettier": "1.18.0",
		"tweetnacl": "1.0.3",
		"typechain": "8.1.1",
		"typescript": "4.9.4"
	}
}
