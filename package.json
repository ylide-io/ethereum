{
	"name": "@ylide/ethereum",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"version": "0.7.15",
	"description": "Ylide Protocol SDK implementation for EVM-based blockchains",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/ylide-io/ethereum.git"
	},
	"files": [
		"lib/**/*",
		"src/**/*"
	],
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 0",
		"build": "rimraf ./lib && tsc",
		"start": "ts-node ./src/index.ts",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "tslint -p tsconfig.json",
		"prepublishOnly": "npm test && npm run lint",
		"preversion": "npm run lint"
	},
	"keywords": [
		"blockchain",
		"ethereum",
		"messaging",
		"communication"
	],
	"author": "Danila Simonov",
	"license": "ISC",
	"dependencies": {
		"@ensdomains/ensjs": "2.1.0",
		"@ylide/sdk": "0.7.6",
		"@ylide/smart-buffer": "0.0.9",
		"eventemitter3": "4.0.7",
		"semaphore-promise": "1.4.1",
		"web3": "1.8.0",
		"web3-core": "1.8.0",
		"web3-eth": "1.8.0",
		"web3-eth-contract": "1.8.0",
		"web3-utils": "1.8.0"
	},
	"devDependencies": {
		"prettier": "2.7.1",
		"rimraf": "3.0.2",
		"ts-node": "10.8.2",
		"tslint": "6.1.3",
		"tslint-config-prettier": "1.18.0",
		"typescript": "4.7.4"
	}
}
